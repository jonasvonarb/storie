_mobile = '(max-width: 767px)'
_phone = '(max-width: 767px)'
_tablet_portrait = '(min-width: 768px) and (max-width: 1023px)'
_desktop_small = '(min-width: 1201px) and (max-width: 1400px)'
_desktop_large = '(min-width: 1401px) and (max-width: 1600px)'
_desktop_all = '(min-width: 1024px)'

:root
  --containert-width calc(100vw - 300px)
  
  --body-font-size: 1.3rem;
  --nav-font-size: 2.4rem;
  --logo-font-size: 4rem;

  --header-height: 8rem;

@font-face
  font-family 'WorkSans';
  src: url('/fonts/WorkSans-Regular.woff2') format('woff2');
  font-weight normal;
  font-style normal;

@font-face
  font-family 'WorkSans';
  src: url('/fonts/WorkSans-Bold.woff2') format('woff2');
  font-weight bold;
  font-style normal;


html
  font-size: 62.5%;

*
  box-sizing: border-box;

body
  font-family: 'WorkSans', sans-serif;
  font-size: var(--body-font-size);
  line-height: 1.5;
  color: #333;
  margin: 0;
  padding: 0;
  // overflow-y: scroll 
  width: 100vw;

*
  overscroll-behavior: none

p
  margin-block 0
  margin-top 1rem

ul
  padding-inline-start: 1.5rem;
  


#app {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
}

h1 {
  font-size: var(--logo-font-size);
  line-height: 1;
}
h2
  // 

h3
  font-weight: bold


h4
  font-weight: normal