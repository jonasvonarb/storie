:root
  --body-font-size: 1.3rem;
  --nav-font-size: 2.4rem;
  --logo-font-size: 4rem;

html
  font-size: 62.5%;

*
  box-sizing: border-box;

body
  font-family: 'Roboto', sans-serif;
  font-size: var(--body-font-size);
  line-height: 1.5;
  color: #333;
  margin: 0;
  padding: 1rem;
  overflow: hidden
  height: 100vh;
  width: 100vw;

ul
  padding-inline-start: 1.5rem;
  


#app {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%
  width: 100%;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
}

h1 {
  font-size: var(--logo-font-size);
  line-height: 1;
}
h2
  // 

h3
  font-weight: bold


h4
  font-weight: normal