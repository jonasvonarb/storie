_mobile = '(max-width: 767px)'
_phone = '(max-width: 767px)'
_tablet_portrait = '(min-width: 768px) and (max-width: 1023px)'
_desktop_small = '(min-width: 1201px) and (max-width: 1400px)'
_desktop_large = '(min-width: 1401px) and (max-width: 1600px)'
_desktop_all = '(min-width: 1024px)'

:root
  --containert-width calc(100vw - 300px)
  
  --body-font-size: 1.6rem;
  --filter-font-size: 1.7rem;
  --nav-font-size: 2.6rem;
  --logo-font-size: 4.2rem;

  --header-height: 6rem;



@font-face
  font-family 'WorkSans';
  src: url('/fonts/WorkSans-Regular.woff2') format('woff2');
  font-weight normal;
  font-style normal;

@font-face
  font-family 'WorkSans';
  src: url('/fonts/WorkSans-Bold.woff2') format('woff2');
  font-weight bold;
  font-style normal;


html
  font-size: 62.5%;

*
  box-sizing: border-box;

body
  font-family: 'WorkSans', sans-serif;
  font-size: var(--body-font-size);
  line-height: 1.2;
  color: #333;
  margin: 0;
  // padding: 0; 
  overflow-x: hidden
  width: 100vw;

*::selection
    color white
    background-color: black

*
  overscroll-behavior: none

// /* Hide scrollbar for Chrome, Safari and Opera */
// *::-webkit-scrollbar {
//   display: none;
// }

// /* Hide scrollbar for IE, Edge and Firefox */
// * {
//   -ms-overflow-style: none;  /* IE and Edge */
//   scrollbar-width: none;  /* Firefox */
// }

p
  margin-block 0
  margin-top 0
  padding 0
  padding-bottom 1em

li > p
  padding 0

ul
  padding-inline-start: 1.5rem;
  margin 0
  
a
  text-decoration: none;
  color: inherit;
  text-decoration: underline
  @media (hover: hover)
    &:hover
      color #999


#app {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
}

h3
  font-size 1em
  font-weight: bold;
  // margin-top: 1em;

h1 {
  font-size: var(--logo-font-size);
  line-height: 1;
}
h2
  // 

h3
  font-weight: bold


h4
  font-weight: normal

@media (max-width: 767px)
  :root
    --body-font-size: 1.5rem;
    --header-height: 7rem;
    --nav-font-size: 2.2rem;
    
@media (min-width: 1200px)
  :root
    --body-font-size: 1.7rem;
    --filter-font-size: 1.7rem;
    --nav-font-size: 3rem;
    --logo-font-size: 4.2rem;

    --header-height: 7rem;